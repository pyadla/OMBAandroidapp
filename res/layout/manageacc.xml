<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header"
    android:layout_alignParentTop="true">

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="#3083FF"
    android:paddingTop="3dp" >

<TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:gravity="left">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="left"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp">
<Button
      android:layout_width="65dip"
      android:layout_height="50dip"
      android:background="@drawable/icon" >     
    </Button>
    <ImageView
        android:layout_width="200dip"
        android:layout_height="fill_parent"
        android:src="@drawable/logo" />
    </LinearLayout>

</TableRow></TableLayout>
</LinearLayout>

<LinearLayout 
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom" >
<TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#3083FF"
    android:gravity="center_horizontal">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:paddingRight="5dp">
<Button
      android:id="@+id/home"
      android:layout_width="60dip"
      android:layout_height="45dip"
      android:background="@drawable/hicon" >     
    </Button></LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">
<Button
      android:id="@+id/settings"
      android:layout_width="70dip"
      android:layout_height="50dip"
      android:background="@drawable/settings" ></Button>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="6dp">
<Button
      android:id="@+id/loc"
      android:layout_width="70dip"
      android:layout_height="50dip"
      android:background="@drawable/locus" >     
    </Button></LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="4dp">

<Button
      android:id="@+id/lg"
      android:layout_width="65dip"
      android:layout_height="53dip"
      android:background="@drawable/logout" ></Button>
</LinearLayout>
</TableRow></TableLayout>
</LinearLayout>

<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="right">
<TextView
      android:id="@+id/name"
      android:textSize="18dip"
      android:textColor="#A4A4A4"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="wrap_content"
      android:gravity="right"
      android:textStyle="bold"
      android:paddingRight="5dp"
      android:layout_height="wrap_content"
      android:text="" >
</TextView></LinearLayout>
<TextView android:textSize="25dip"
      android:textColor="#3083FF"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="CHANGE CONTACT INFO" android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:padding="0dp"/>

 <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:visibility="visible">
 
     <TextView android:textSize="14dip"
      android:textColor="#3083FF"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Please click and enter the new details."
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="10dp"/>
    
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30dp" >

        <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:clickable="true"
                android:text="Phone No"
                android:textSize="22dip"
                android:textColor="#848484"
                android:textAppearance="?android:attr/textAppearanceLarge"  />
   
     </TableRow>
       
      <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

             <EditText
                android:id="@+id/et1"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:editable="true"
                android:inputType="text"
                android:textSize="16dip"
                android:visibility="gone">

                <requestFocus />
            </EditText>
        </TableRow>
       
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id"
                android:editable="false"
                android:clickable="true"
                android:textSize="22dip"
                android:textColor="#848484"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
           </TableRow>
          
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
           
            <EditText
                android:id="@+id/et2"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:editable="true"
                android:inputType="text"
                android:textSize="16dip"
                android:visibility="gone">
            <requestFocus />
            </EditText>
        </TableRow>
       
            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="left"
            android:paddingLeft="30dp" >

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:editable="false"
                android:clickable="true"
                android:textSize="22dip"
                android:textColor="#848484"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

               </TableRow>
          
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <EditText
                android:id="@+id/et3"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:editable="true"
                android:inputType="text"
                android:textSize="16dip"
                android:visibility="gone">
            <requestFocus />
            </EditText>
            </TableRow>
               
         <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >
       
     <Button
      android:id="@+id/sub"
      android:textSize="20dip"
      android:textColor="#F2F2F2"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="100dip"
      android:textStyle="bold"
      android:padding="4dp"
      android:layout_height="35dip"
      android:clickable="true"
      android:background="@layout/buttonlayout"
      android:text="Submit" >
    </Button>
   
    </TableRow>
    </TableLayout>

    <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25dip"
                android:textColor="#848484"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="visible"/>
 </LinearLayout>
 
 </ScrollView>

</RelativeLayout>