<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header"
    android:layout_alignParentTop="true">

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="#3083FF"
    android:paddingTop="3dp" >

<TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:gravity="left">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="left"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp">
<Button
      android:layout_width="65dip"
      android:layout_height="50dip"
      android:background="@drawable/icon" >  
    </Button>
    <ImageView
        android:layout_width="200dip"
        android:layout_height="fill_parent"
        android:src="@drawable/logo" />
    </LinearLayout>

</TableRow></TableLayout>
</LinearLayout>
<LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom" >
<TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#3083FF"
    android:gravity="center_horizontal">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:paddingRight="5dp">
<Button
      android:id="@+id/home"
      android:layout_width="60dip"
      android:layout_height="45dip"
      android:background="@drawable/hicon" > 
    </Button></LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">
<Button
      android:id="@+id/acb"
      android:layout_width="70dip"
      android:layout_height="50dip"
      android:background="@drawable/acbb" ></Button>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="6dp">
<Button
      android:id="@+id/addb"
      android:layout_width="70dip"
      android:layout_height="50dip"
      android:background="@drawable/addben" > 
    </Button></LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:padding="4dp">

<Button
      android:id="@+id/lg"
      android:layout_width="65dip"
      android:layout_height="53dip"
      android:background="@drawable/logout" ></Button>
</LinearLayout>
</TableRow></TableLayout>
</LinearLayout>

<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:layout_above="@+id/footer"
    android:layout_below="@+id/header">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:gravity="right"><TextView
      android:id="@+id/name"
      android:textSize="18dip"
      android:textColor="#A4A4A4"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:layout_width="wrap_content"
      android:gravity="right"
      android:textStyle="bold"
      android:paddingRight="5dp"
      android:layout_height="wrap_content"
      android:text="" >
</TextView></LinearLayout>
<TextView  
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:editable="false"
    android:gravity="center_horizontal"
    android:text="SCHEDULE TRANSFER"
    android:textSize="30dip"
    android:textColor="#0066FF"
    android:paddingBottom="10dp"
    android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>

 <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
  
  <TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">
<TextView android:textSize="20dip"
      android:id="@+id/t1"
      android:textColor="#3083FF"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textStyle="bold"
      android:text="From Account:"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:paddingLeft="12dp"/>
</TableRow>
    
     <TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center_horizontal">
<Button
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:textSize="18dip"
    android:textColor="#FFFFFF"
    android:background="@layout/bluecell"
    android:padding="3dp"
    android:editable="true"
    android:layout_height="wrap_content"
    android:text="From Account No" />
</TableRow>

    <TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">


<TextView android:textSize="20dip"
      android:id="@+id/t2"
      android:textColor="#3083FF"
      android:textStyle="bold"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="To Account:"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:paddingLeft="12dp"/>
</TableRow>
  
    <TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:gravity="center_horizontal">

<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:textColor="#FFFFFF"
    android:editable="true"
    android:background="@layout/bluecell"
    android:padding="3dp"
    android:layout_height="wrap_content"
    android:textSize="18dip"
    android:text="To Account No" />

</TableRow>

</TableLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:gravity="center_horizontal">
<EditText android:id="@+id/amt"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:editable="true"
    android:textColor="#A4A4A4"
    android:inputType="text"
    android:hint="Amount"
    android:textSize="15dip" >
    </EditText></LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp">

<TextView android:textSize="20dip"
      android:id="@+id/t2"
      android:textColor="#3083FF"
      android:textStyle="bold"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text="Date of Transfer:"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="left"
      android:paddingLeft="13dp"
      android:paddingBottom="10dp"/>
<Button android:id="@+id/myDatePickerButton1"
        android:padding="5dp"
        android:textSize="18dip"
        android:layout_width="150dip"
        android:background="@layout/bluecell"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:text="Choose a Date"/>
<TextView android:textSize="20dip"
      android:id="@+id/showDate1"
      android:textColor="#3083FF"
      android:textStyle="bold"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:text=""
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:visibility="gone"/>

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:gravity="center_horizontal">
<Button android:text=" Submit "
    android:textSize="20dip"
    android:id="@+id/sub"
    android:background="@layout/bluecell"
    android:clickable="true"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:textColor="#FFFFFF"
    android:padding="4dp"
    android:layout_height="wrap_content"/>
</LinearLayout>
<TextView  
    android:id="@+id/trstatus"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:editable="true"
    android:visibility="gone"
    android:gravity="center_horizontal"
    android:text=""
    android:textSize="18dip"
    android:textColor="#0066FF"
    android:paddingTop="15dp"
    android:textAppearance="?android:attr/textAppearanceLarge" >
    </TextView>
    <Button android:text="Transfer"
    android:textSize="20dip"
    android:id="@+id/tg"
    android:background="@layout/bluecell"
    android:clickable="true"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:textColor="#FFFFFF"
    android:padding="4dp"
    android:visibility="gone"
    android:layout_height="wrap_content"/>
    </LinearLayout>
 </ScrollView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listdisp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#3083FF"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    >
    <ListView android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
 
</LinearLayout>

</RelativeLayout>